package config;

import java.io.File;

import net.minecraftforge.common.config.Configuration;
import reference.Blocks;
import reference.Items;;

public class ConfigHandler {
	
	public static void init(File file){
	Configuration config = new Configuration(file);
	
	config.load();
	
	Blocks.MACHINE_ID = config.getBlock(BlockInfo.MACHINE_KEY, BlockInfo.MACHINE_DEFAULT).getInt();
	BlockInfo.RAINBOW_ID = config.getBlock(BlockInfo.RAINBOW_KEY, BlockInfo.RAINBOW_DEFAULT).getInt();
	BlockInfo.ROTATIONAL_ID = config.getBlock(BlockInfo.ROTATIONAL_KEY, BlockInfo.ROTATIONAL_DEFAULT).getInt();
	BlockInfo.BOMB_ID = config.getBlock(BlockInfo.BOMB_KEY, BlockInfo.BOMB_DEFAULT).getInt();
	BlockInfo.POISON_ID = config.getBlock(BlockInfo.POISON_KEY, BlockInfo.POISON_DEFAULT).getInt();
	BlockInfo.ALEMBIC_ID = config.getBlock(BlockInfo.ALEMBIC_KEY, BlockInfo.ALEMBIC_DEFAULT).getInt();
	BlockInfo.CHANDELIER_ID = config.getBlock(BlockInfo.CHANDELIER_KEY, BlockInfo.CHANDELIER_DEFAULT).getInt();
	
	ItemInfo.WAND_ID = config.getItem(ItemInfo.WAND_KEY, ItemInfo.WAND_DEFAULT).getInt() - 256;
	ItemInfo.CARD_ID = config.getItem(ItemInfo.CARD_KEY, ItemInfo.CARD_DEFAULT).getInt() - 256;
	ItemInfo.DEATHSTONE_ID = config.getItem(ItemInfo.DEATHSTONE_KEY, ItemInfo.DEATHSTONE_DEFAULT).getInt() - 256;
	ItemInfo.PRISM_ID = config.getItem(ItemInfo.PRISM_KEY, ItemInfo.PRISM_DEFAULT).getInt() - 256;
	ItemInfo.DROID_ID = config.getItem(ItemInfo.DROID_KEY, ItemInfo.DROID_DEFAULT).getInt() - 256;
	
	config.save();
	
	}
}
